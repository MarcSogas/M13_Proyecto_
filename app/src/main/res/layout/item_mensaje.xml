<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageMensaje"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="@color/black"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mensajeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="4dp"
        android:textColor="#673AB7"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageMensaje"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Coordinadora" />

    <TextView
        android:id="@+id/mensajeText"
        android:layout_width="317dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageMensaje"
        app:layout_constraintTop_toBottomOf="@+id/mensajeName"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Texto del mensaje" />


</androidx.constraintlayout.widget.ConstraintLayout>